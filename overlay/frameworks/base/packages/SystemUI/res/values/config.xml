<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- Control whether status bar should distinguish HSPA data icon form UMTS data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- Doze: does this device support STATE_DOZE and STATE_DOZE_SUSPEND?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Doze: should the pickup sensor be used as a pulse signal? -->
    <bool name="doze_pulse_on_pick_up">true</bool>
        
    <!-- Use camera interface for camera. Must specify config_flashDevice and config_torchBrightness  -->
    <bool name="config_useCameraInterface">false</bool>

    <!-- Torch led brightness value for led on (1 - 255). Usable with config_useCameraInterface=true -->
    <integer name="config_torchBrightness">10</integer>

    <!-- Defines the sysfs path to the torch led to be used as a flashlight. Usable with config_useCameraInterface=true -->
    <string name="config_flashDevice">/sys/class/leds/torch-sec1/brightness</string>

</resources>
