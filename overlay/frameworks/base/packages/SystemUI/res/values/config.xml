<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>

    <!-- Whether recents should use hardware layers for its taskviews. This flag can be enabled
    for devices where the java drawing of round rects may be slow -->
    <bool name="config_recents_use_hardware_layers">true</bool>

    <!-- Whether to use cheap, less good looking shadows for recents -->
    <bool name="config_recents_fake_shadows">true</bool>

    <!-- Control whether status bar should distinguish HSPA data icon form UMTS
    data icon on devices -->
    <bool name="config_hspa_data_distinguishable">true</bool>

    <!-- Use camera interface for the flashlight. If set to false, you must specify
    config_flashDevice and config_torchBrightness too -->
    <bool translatable="false" name="config_useCameraInterface">false</bool>

    <!-- Torch led brightness value for led on (1 - 255). Usable with config_useCameraInterface=false -->
    <integer name="config_torchBrightness">255</integer>

    <!-- Defines the sysfs path to the torch led to be used as a flashlight. Usable with config_useCameraInterface=false -->
    <string name="config_flashDevice">/sys/class/leds/torch-sec1/brightness</string>

    <!-- Doze: does this device support STATE_DOZE and STATE_DOZE_SUSPEND?  -->
    <bool name="doze_display_state_supported">true</bool>

    <!-- Doze: should the pickup sensor be used as a pulse signal? -->
    <bool name="doze_pulse_on_pick_up">true</bool>

</resources>
